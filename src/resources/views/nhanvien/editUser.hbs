<div class="mt-4 w-75 container">
    {{!-- {{#each courses}} --}}
    <h3>Sửa sản phẩm {{item.name}}</h3>
    <form class="mt-4" method="POST" action="/items/{{item._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="teaxt" class="form-control" value="{{item.name}}" id="name" name = "name">
        </div>

        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" value="{{item.description}}" id="description" name = "description">
        </div>

        <div class="form-group">
            <label for="loai">Loại sản phẩm</label>
            <div class="input-group">
            </div>
        </div>

        <div class="form-group">
            <label for="img">link img</label>
            <input type="text" class="form-control" value="{{item.img}}" id="img" name = "img">
        </div>
        <div class="form-group">
            <label for="gia">Đơn giá</label>
            <input type="text" class="form-control" id="gia" name = "gia" value="{{item.gia}}">
        </div>
        <div class="form-group">
            <label for="soluong">Số lượng</label>
            <input type="text" class="form-control" id="soluong" name = "soluong"value="{{item.soluong}}">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
    {{!-- {{/each}} --}}
</div>


